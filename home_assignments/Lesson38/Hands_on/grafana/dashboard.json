{
  "id": null,
  "title": "Ping Checker Dashboard",
  "timezone": "browser",
  "panels": [
    {
      "type": "stat",
      "title": "Total Ping Requests",
      "gridPos": {
        "x": 0,
        "y": 0,
        "w": 6,
        "h": 4
      },
      "datasource": {
        "type": "prometheus",
        "uid": "PROMETHEUS_DS_UID"
      },
      "targets": [
        {
          "expr": "request_count_total",
          "legendFormat": "Total Requests"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "red",
                "value": 100
              }
            ]
          }
        },
        "overrides": []
      }
    },
    {
      "type": "stat",
      "title": "Ping Failures",
      "gridPos": {
        "x": 6,
        "y": 0,
        "w": 6,
        "h": 4
      },
      "datasource": {
        "type": "prometheus",
        "uid": "PROMETHEUS_DS_UID"
      },
      "targets": [
        {
          "expr": "ping_failures_total",
          "legendFormat": "Failures"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "orange",
                "value": 1
              }
            ]
          }
        },
        "overrides": []
      }
    },
    {
      "type": "timeseries",
      "title": "Latency Over Time",
      "gridPos": {
        "x": 0,
        "y": 4,
        "w": 12,
        "h": 8
      },
      "datasource": {
        "type": "prometheus",
        "uid": "PROMETHEUS_DS_UID"
      },
      "targets": [
        {
          "expr": "rate(request_latency_seconds_sum[1m])",
          "legendFormat": "Latency"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "color": {
            "mode": "palette-classic"
          }
        },
        "overrides": []
      }
    }
  ],
  "schemaVersion": 37,
  "version": 1,
  "refresh": "5s"
}